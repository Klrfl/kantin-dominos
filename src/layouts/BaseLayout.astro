---
import BaseHead from "../components/BaseHead.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
const { title, description = "Kantin Dominos SMK Metland" } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {title} {description} />
  </head>

  <body>
    <NavBar />
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      .main-section__text {
        max-width: 75ch;
      }

      .main-section__text,
      .main-section__content {
        padding: 2rem;
      }

      @media screen and (max-width: 50em) {
        .main-section {
          padding: 2rem;
        }
      }
    </style>
  </body>
</html>
