---
const { menuItem } = Astro.props;
const frontmatter = menuItem.data;
---

<li class="menu-item-container">
  <a href={`menu/${menuItem.slug}`}>
    <article class="menu-item">
      <figure>
        <img
          src={frontmatter.gambar.src}
          alt={frontmatter.gambar.alt}
          width="300"
          height="200"
        />
      </figure>

      <figcaption class="menu-item__details">
        <h4>{frontmatter.title}</h4>
        <p>{frontmatter.harga}</p>
      </figcaption>
    </article>
  </a>

  <style>
    .menu-item-container a {
      color: inherit;
      text-decoration: none;
    }

    .menu-item {
      padding: 2rem;
      outline: 2px solid #ddd;
    }

    .menu-item:hover {
      background: var(--white-200);
    }

    .menu-item__details h4 {
      margin-block: 0 1.1rem;
      line-height: 1.2;
    }
  </style>
</li>
